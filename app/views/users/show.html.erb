<h1>User: <%= @user.email %></h1>

<p>Joined on: <%= @user.created_at.strftime("%B %d, %Y") %></p>

<h2>Blog Posts</h2>
<% @user.blog_posts.each do |post| %>
  <div class="blog-post">
    <h3><%= link_to post.title, blog_post_path(post) %></h3>
    <p><%= truncate(post.body, length: 100) %></p>
  </div>
<% end %>
