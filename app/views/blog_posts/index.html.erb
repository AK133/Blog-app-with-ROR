<% session[:from_my_posts] = nil %>
<div><h1>ALL BLOGS</h1></div>
<div class="blog-posts-container">
<% @blog_posts.each do |blog_post| %>
  <div class="post-box">
    <% if blog_post.image_url.present? %>
      <img src="<%= blog_post.image_url %>" alt="<%= blog_post.title %>" class="post-thumbnail">
    <% end %>
    <h2><%= link_to blog_post.title, blog_post %></h2>
    <%= blog_post.body %>
    <%# <h2>Likes: <%= blog_post.likes.count %>
      <h3 class="user-post-counters"> Likes: <%= blog_post.like_counter %><h3>
  </div>
<% end %>
</div>